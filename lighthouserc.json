{
  "ci": {
    "collect": {
      "staticDistDir": "dist",
      "isSinglePageApplication": true,
      "numberOfRuns": 1
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": ["warn", {"minScore": 0.8}],
        "categories:accessibility": ["error", {"minScore": 0.9}],
        "categories:pwa": ["warn", {"minScore": 0.7}]
      }
    }
  }
}

