# Application
NODE_ENV=development
PORT=8080
LOG_LEVEL=debug

# Database connection (used by Prisma)
DB_URI=postgresql://tjuser:tjpass@db:5432/tjdb?schema=public

# JWT secrets and TTLs
JWT_SECRET=your_access_secret_here
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=30d

# OTP configuration
OTP_TTL_SECONDS=300
OTP_MAX_RESENDS=3
OTP_MAX_ATTEMPTS=5
OTP_COOLDOWN_SECONDS=60

# Global rate limiting
RATE_LIMIT_GLOBAL_MAX=100
RATE_LIMIT_GLOBAL_WINDOW_MS=900000

# OTP rate limiting per IP
RATE_LIMIT_OTP_MAX=10
RATE_LIMIT_OTP_WINDOW_MS=60000

# Payload limits
JSON_BODY_LIMIT_BYTES=1048576
MULTIPART_TOTAL_LIMIT_BYTES=10485760
MULTIPART_FILE_LIMIT_BYTES=2097152

# CORS
CORS_ORIGIN=http://localhost:4200
CORS_CREDENTIALS=true

# File storage
STORAGE_DRIVER=local

# Observability (leave empty to disable Sentry)
SENTRY_DSN=
